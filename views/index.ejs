<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Exo+2:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-animation">
        <div class="star-field">
            <% for(let i = 0; i < 100; i++) { %>
                <div class="star" style="left: <%= Math.floor(Math.random() * 100) %>%; top: <%= Math.floor(Math.random() * 100) %>%; animation-delay: <%= (Math.random() * 3).toFixed(1) %>s;"></div>
            <% } %>
        </div>
        <div class="nebula nebula-1"></div>
        <div class="nebula nebula-2"></div>
        <div class="nebula nebula-3"></div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <i class="fas fa-atom"></i>
                <span>BookVerse</span>
            </a>
            
            <div class="nav-menu" id="nav-menu">
                <a href="/" class="nav-link">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </a>
                <a href="/books" class="nav-link">
                    <i class="fas fa-book"></i>
                    <span>Explore</span>
                </a>
                <a href="/ai-finder" class="nav-link ai-link">
                    <i class="fas fa-robot"></i>
                    <span>AI Finder</span>
                </a>
                
                <% if (user) { %>
                    <a href="/profile" class="nav-link">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                    <form action="/logout" method="POST" style="display: inline;">
                        <button type="submit" class="nav-link logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                <% } else { %>
                    <a href="/login" class="nav-link">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </a>
                    <a href="/register" class="nav-link register-btn">
                        <i class="fas fa-user-plus"></i>
                        <span>Register</span>
                    </a>
                <% } %>
            </div>
            
            <div class="nav-toggle" id="nav-toggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1 class="hero-title">BookVerse</h1>
                <p class="hero-subtitle">
                    Discover your next great read with AI-powered recommendations in the digital age. 
                    Explore over 12,000 books across all genres and let our intelligent system find your perfect match.
                </p>
                
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-number">12K+</span>
                        <span class="stat-label">Books</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">25+</span>
                        <span class="stat-label">Genres</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">AI</span>
                        <span class="stat-label">Powered</span>
                    </div>
                </div>

                <div style="margin-top: 2rem;">
                    <a href="/ai-finder" class="btn btn-primary">
                        <i class="fas fa-robot"></i>
                        Try AI Book Finder
                    </a>
                    <a href="/books" class="btn btn-outline" style="margin-left: 1rem;">
                        <i class="fas fa-book"></i>
                        Explore All Books
                    </a>
                </div>
            </div>
        </section>

        <!-- Trending Books -->
        <section class="container">
            <div style="text-align: center; margin-bottom: 3rem;">
                <h2 style="font-family: 'Orbitron', monospace; font-size: 2.5rem; margin-bottom: 1rem; background: linear-gradient(135deg, #00d4ff 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    Trending Now
                </h2>
                <p style="color: var(--text-secondary); font-size: 1.1rem;">
                    Discover the most popular books that readers are loving right now
                </p>
            </div>

            <div class="books-grid">
                <% trendingBooks.forEach(book => { %>
                    <div class="book-card">
                        <a href="/books/<%= book._id %>" style="text-decoration: none; color: inherit;">
                            <img src="<%= book.coverImage %>" alt="<%= book.title %>" class="book-cover">
                            <div class="book-info">
                                <h3 class="book-title"><%= book.title %></h3>
                                <p class="book-author">by <%= book.author %></p>
                                <div class="book-genres">
                                    <% book.genre.slice(0, 2).forEach(g => { %>
                                        <span class="genre-tag"><%= g %></span>
                                    <% }) %>
                                </div>
                                <div class="book-rating">
                                    <i class="fas fa-star"></i>
                                    <span><%= book.averageRating %></span>
                                    <span style="color: var(--text-muted);">(<%= book.ratingsCount %>)</span>
                                </div>
                                <div class="book-meta">
                                    <span><%= book.pages %> pages</span>
                                    <span><%= book.publishedYear %></span>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>

            <div style="text-align: center; margin-top: 3rem;">
                <a href="/books" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i>
                    View All Books
                </a>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><i class="fas fa-atom"></i> BookVerse</h3>
                    <p>Discover your next great read with AI-powered recommendations in the digital age.</p>
                </div>
                <div class="footer-section">
                    <h4>Explore</h4>
                    <ul>
                        <li><a href="/books">All Books</a></li>
                        <li><a href="/ai-finder">AI Finder</a></li>
                        <li><a href="/books?genre=Science Fiction">Sci-Fi</a></li>
                        <li><a href="/books?genre=Fantasy">Fantasy</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Connect</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-github"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 BookVerse. All rights reserved. | Powered by AI</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>